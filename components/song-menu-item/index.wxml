
<wxs src="../../utils/format.wxs" module="format"></wxs>
<view class="item" item="{{item}}">
    <view class="top">
        <image class="image" src="{{item.coverImgUrl}}" mode="widthFix"></image>
        <view class="play-counter">
            {{format.formatCount(item.playCount)}}
        </view>
    </view>
    <view class="bottom">
    {{item.name}}
    </view>
</view>
